<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BtnPrincipal" parent="@android:style/TextAppearance.Medium">
        <item name="android:background">@drawable/btn_azul_gradient</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">10dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:radius">15dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BtnPagar" parent="@android:style/TextAppearance.Medium">
